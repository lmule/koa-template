{
    "name": "<%- projectName%>",
    "script": "./index.js",
    "cwd": "./",
    "instances": "0",
    "instance_var": "INSTANCE_ID",
    "watch": false,
    "exec_mode": "cluster",
    "max_memory_restart": "1G",
    "log_date_format":"YYYY-MM-DD HH:mm:ss",
    "merge_logs": true,
    "error_file": "./log/pm2/err.log",
    "out_file": "./log/pm2/out.log",
    "env_dev": {
        "NODE_ENV": "development",
        "PORT": <%- port%>
    },
    "env_test": {
        "NODE_ENV": "test",
        "PORT": <%- port%>
    },
    "env": {
        "NODE_ENV": "production",
        "PORT": <%- port%>
    }
}
